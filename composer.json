{
  "name": "unofficialmc2/foundation-api",
  "description": "Package contenant un ensemble de class permettant de construire un API avec Slim v4",
  "type": "library",
  "authors": [
    {
      "name": "Fabien Sanchez",
      "email": "fabien.sanchez@arche-mc2.fr"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "fzed51/http-exception": "^3.0",
    "fzed51/instance-resolver": "^2.0",
    "fzed51/migration": "^2.0",
    "fzed51/pdo-helper": "^2.0",
    "fzed51/respect-validation-wrapper": "^4.0",
    "monolog/monolog": "^3.2",
    "pimple/pimple": "^3.5",
    "slim/http": "^1.2",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.10"
  },
  "require-dev": {
    "fakerphp/faker": "^1.20",
    "fzed51/version": "^2.0",
    "ocramius/package-versions": "^2.6",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "suggest": {
    "firebase/php-jwt": "pour la gestion des JWT",
    "fzed51/respect-validation-wrapper": "pour simplifier la validation",
    "fzed51/spicy-mash": "pour simplifier l'utilisation d'openSSL",
    "phpmailer/phpmailer": "pour l'es envoie d'e-mail",
    "fzed51/info-client": "pour interpr√©ter les information du client"
  },
  "config": {
    "sort-packages": true
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "./test",
      "FoundationApi\\": "./test/Api"
    }
  },
  "autoload": {
    "psr-4": {
      "FoundationApi\\": "./src/Api"
    },
    "files": [
      "./src/Api/Helper/function.php"
    ]
  },
  "scripts": {
    "lint": [
      "phpcs",
      "phpstan"
    ],
    "fix": [
      "phpcbf"
    ],
    "test": [
      "Composer\\Config::disableProcessTimeout",
      "phpunit"
    ],
    "version": "version-manager",
    "_version:maj": "version-manager -u major",
    "_version:min": "version-manager -u minor",
    "_version:pat": "version-manager -u patch"
  },
  "scripts-descriptions": {
    "lint": "Verify code quality.",
    "fix": "Fix code quality.",
    "test": "Run unit test.",
    "version": "Show the current version.",
    "_version:maj": "update to next major version.",
    "_version:min": "update to next minor version.",
    "_version:pat": "update to next patch version."
  }
}
